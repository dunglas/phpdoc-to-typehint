#!/usr/bin/env php
<?php

use Dunglas\PhpDocToTypeHint\ConvertCommand;
use Symfony\Component\Console\Application;

/*
 * This file is part of the PHPDoc to Type Hint package.
 *
 * (c) KÃ©vin Dunglas <dunglas@gmail.com>
 *
 * For the full copyright and license information, please view the LICENSE
 * file that was distributed with this source code.
 */

if (PHP_VERSION_ID < 70000) {
    file_put_contents('php://stderr', sprintf(
        "The PHPDoc to Type Hint converter requires PHP 7.0 version or higher and your system has\n".
        "PHP %s version installed.\n\n".
        "To solve this issue, upgrade your PHP installation.\n\n",
        PHP_VERSION
    ));
    exit(1);
}

function includeIfExists($file)
{
    if (file_exists($file)) {
        return include $file;
    }
}

if ((!$loader = includeIfExists(__DIR__.'/../vendor/autoload.php')) && (!$loader = includeIfExists(__DIR__.'/../../../autoload.php'))) {
    fwrite(STDERR,
        'You must set up the project dependencies, run the following commands:'.PHP_EOL.
        'curl -s http://getcomposer.org/installer | php'.PHP_EOL.
        'php composer.phar install'.PHP_EOL
    );
    exit(1);
}

$application = new Application('PHPDoc to Type Hint converter', '0.1.0-DEV');
$application->add(new ConvertCommand());
$application->setDefaultCommand('convert', true);
$application->run();
